<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1"
    android:background="#ededed"
    >
    <include layout="@layout/title"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:visibility="visible" />
    <ImageView
        android:id="@+id/logo_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo"
        android:layout_marginTop="12dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"/>
    <!-- 账号 -->
    <TableRow>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="账号："
            android:textSize="16sp"
            android:gravity="center"
            android:background="#ffffff"

            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="用户名"
            android:textSize="16sp"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:selectAllOnFocus="true"
            android:layout_span="3"
            android:id="@+id/geren_user_name" />

    </TableRow>
    <!-- 体重 -->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="体重："
            android:background="#ffffff"
            android:gravity="center"
            android:textSize="16sp"

            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#ffffff"
            android:gravity="center"

            android:inputType="number"
            android:id="@+id/geren_user_weight" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="kg"
            android:gravity="center"
            android:background="#ffffff"
            android:textSize="16sp"
            />
    </TableRow>
    <!-- 生日 -->
    <TableRow>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="身高："
            android:gravity="center"
            android:background="#ffffff"

            android:textSize="16sp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="number"
            android:background="#ffffff"
            android:id="@+id/geren_user_height" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="cm"
            android:gravity="center"
            android:background="#ffffff"
            android:textSize="16sp"
            />

    </TableRow>
    <!-- 住址 -->
    <TableRow>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="性别："
            android:background="#ffffff"
            android:gravity="center"
            android:textSize="16sp"
            />

        <RadioGroup
            android:layout_span="2"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/geren_user_sex">

            <RadioButton
                android:text="男"
                android:textSize="16sp"
                android:background="#ffffff"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:id="@+id/geren_man" />

            <RadioButton
                android:text="女"
                android:textSize="16sp"
                android:background="#ffffff"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:id="@+id/geren_woman" />
        </RadioGroup>

    </TableRow>
    <TableRow>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="模式："
            android:background="#ffffff"
            android:gravity="center"
            android:textSize="16sp"
            />
        <RadioGroup
            android:layout_span="3"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/geren_user_mode">
            <RadioButton
                android:text="减脂"
                android:background="#ffffff"
                android:layout_width="0dp"
                android:textSize="16sp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/geren_jianzhi" />
            <RadioButton
                android:text="正常"
                android:textSize="16sp"
                android:background="#ffffff"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/geren_zhengchang" />

            <RadioButton
                android:text="增肌"
                android:textSize="16sp"
                android:background="#ffffff"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/geren_zengji" />

        </RadioGroup>
    </TableRow>
    <!-- 电子邮箱 -->
    <TableRow>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="年龄："
            android:background="#ffffff"
            android:gravity="center"
            android:textSize="16sp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_span="3"
            android:inputType="date"
            android:background="#ffffff"
            android:id="@+id/geren_user_age" />
    </TableRow>
    <!-- 进入 -->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        >

        <Button
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="进 入"
            android:textSize="24sp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:background="#8bd2d8"
            android:layout_span="4"
            android:id="@+id/geren_enter" />
    </TableRow>
</TableLayout>