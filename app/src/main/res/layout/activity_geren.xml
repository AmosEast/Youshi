<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:stretchColumns="1"
android:background="#ededed"
    >
<!-- 账号 -->
<TableRow>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="账号："
        android:textSize="16sp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="用户名"
        android:selectAllOnFocus="true"
        />

</TableRow>
<!-- 体重 -->
<TableRow>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="体重："
        android:textSize="16sp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:inputType="number"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="kg"
        android:textSize="16sp"
        />
</TableRow>
<!-- 生日 -->
<TableRow>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="身高："
        android:textSize="16sp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:inputType="number"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="cm"
        android:textSize="16sp"
        />

</TableRow>
<!-- 住址 -->
<TableRow>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="性别："
        android:textSize="16sp"
        />

    <RadioButton
        android:text="男"
        android:layout_width="match_parent"
        android:layout_height="48dp" />

    <RadioButton
        android:text="女"
        android:layout_height="48dp" />

</TableRow>
<TableRow>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="模式："
        android:textSize="16sp"
        />

    <RadioButton
        android:text="减脂"
        android:layout_width="match_parent"
        android:layout_height="48dp" />
    <RadioButton
        android:text="正常"
        android:layout_width="match_parent"
        android:layout_height="48dp" />

    <RadioButton
        android:text="增肌"
        android:layout_height="48dp" />
</TableRow>
<!-- 电子邮箱 -->
<TableRow>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="出生年月："
        android:textSize="16sp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:inputType="date"
        />
</TableRow>
<!-- 进入 -->
<TableRow
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="进入"
        android:background="#8bd2d8"
        />
</TableRow>
</TableLayout>